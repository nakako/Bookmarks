doctype html
html
  head
    title タグ付きブックマーク
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
  body
    nav.navbar.navbar-expend-lg.navbar-light.bg-light
      a(href="/").navbar-brand.nav-link タグ付きブックマーク
      nav.bav-link
        ul.nav.justify-content-end
          li.nav-item
            a(href="/bookmarks/new").nav-link ブックマークを登録する
          li.nav-item 
            a(href="/tags").nav-link タグを編集・検索する
          li.nav-item 
            if user 
              a(href="/logout").nav-link #{user.username} をログアウト
            else 
              a(href="/login").nav-link ログイン  
    div.container
      block content
      script(src="/javascripts/bundle.js")
